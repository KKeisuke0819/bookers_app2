<h3 class="error">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</h3>
<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
    <%= f.label  :タイトル %><br>
    <%= f.text_field :title %><br>
    <%= f.label  :内容 %><br>
    <%= f.text_area :body %>
    <%= f.submit %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
|<%= link_to 'Back', books_path %>