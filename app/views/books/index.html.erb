<h3 class="error">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</h3>
<div class="row">
    <%= render 'books/form', book: @book, user: @user %>
    <div class="col-xs-9">
     <%= render 'books/index', books: @books %>
    </div>
</div>